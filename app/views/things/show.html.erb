<p id="notice"><%= notice %></p>

<h2>Thing</h2>

<p>
  <b>Owners:</b>
  <% @thing.owners.each do |owner| %>
    <%= account_link(owner) %> 
  <% end %>
</p>

<p>
  <b>Name:</b>
  <%= @thing.name %>
</p>

<p>
  <b>Description:</b>
  <%= @thing.description %>
</p>

<p>
  <b>Caretakers:</b>
  <% @thing.caretakers.each do |caretaker| %>
    <%= account_link(caretaker) %> 
  <% end %>
</p>

<%= link_to 'Edit', edit_thing_path(@thing) %>