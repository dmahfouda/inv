<table class="index">
  <tr>
    <th>Name</th>
    <th>Details</th>
    <th>Owners</th>
    <th>Caretakers</th>
    <th>Place</th>
    <th>Actions</th>
  </tr>
  
<% @things.each do |thing| %>
  <tr>
    <td><%= thing_link(thing) %></td>
    <td class="thing-details"><%= thing.details %></td>
    <td>
      <% thing.accounts.each do |account| %>
        <%= link_to account%>
      <% end %>
    </td>
    <td>
      <% thing.accounts.each do |account| %>
        <%= link_to account%>
      <% end %>
    </td>
    <td><%= place_link(thing.place) unless thing.place.nil? %></td>
    <td class="thing-actions">
      <%= link_to 'Edit', edit_thing_path(thing) %> 
      <%= link_to 'Clone', thing_clone_path(thing) %>
      <%= link_to 'Destroy', thing, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>