<table class="index">
  <tr>
	<th>Salable</th>
    <th>Name</th>
    <th>Description</th>
    <th>Owners</th>
    <th>Caretakers</th>
    <th>Place</th>
    <th>Actions</th>
  </tr>

<% @things.each do |thing| %>
  <tr>
	<td class="thing-description"><%= thing.salable %></td>
    <td><%= link_to thing.name, thing %></td>
    <td class="thing-description"><%= thing.description %></td>
    <td>
      <% thing.owners.each do |owner| %>
        <%= account_link(owner) %>
      <% end %>
    </td>
    <td>
      <% thing.caretakers.each do |caretaker| %>
        <%= account_link(caretaker) %>
      <% end %>
    </td>
    <td><%= place_link(thing.place) unless thing.place.nil? %></td>
    <td class="thing-actions">
      <%= link_to 'Show', thing %> 
      <%= link_to 'Edit', edit_thing_path(thing) %> 
      <%= link_to 'Destroy', thing, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>