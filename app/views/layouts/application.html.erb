<!DOCTYPE html>
<html>
<head>
  <title>Inv</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div id="nav">
    <strong>inv</strong> &nbsp;
    <%= link_to 'accounts', accounts_path %> &nbsp;
    <%= link_to 'things', things_path %> &nbsp;
    <%= link_to 'tags', tags_path %>
    
    &nbsp;
    
    <%= form_tag(things_search_path, :method => "get") do %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
    <% end %>
  </div>
  
  <div id="main">
    <%= yield %>
  </div>

</body>
</html>
